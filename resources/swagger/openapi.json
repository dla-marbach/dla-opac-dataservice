    "paths": {
        "/info": {
            "get": {
                "description": "Diese offene Schnittstelle enthält die bibliographischen Daten des Quellenrepertoriums der Exilbibliotheken von [Alfred Döblin](https://www.dla-marbach.de/bibliothek/projekte/quellenrepertorium-alfred-doeblin) und [Siegfried Kracauer](https://www.dla-marbach.de/bibliothek/spezialsammlungen/bestandsliste/bibliothek-siegfried-kracauer/).\n\nSie wurde im Rahmen des Projekts \"Data+\" mit Unterstützung des NFDI-Konsortiums [Text+](https://text-plus.org/) und Förderung der Deutschen Forschungsgemeinschaft entwickelt.\n\n*Bitte beachten Sie auch die [Benutzungsordnung](https://www.dla-marbach.de/service/benutzung-bibliothek/).*",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/info/schema": {
            "get": {
                "description": "Liefert Informationen über alle selektierbaren Felder im Suchindex und ihre Datentypen.",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/collections": {
            "get": {
                "description": "Liefert eine Liste der verfügbaren Kollektionen.",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/collection/{id}.{format}": {
            "get": {
                "description": "Liefert alle Datensätze der Kollektion {id} im Format {format}.",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/collectionId"
                    },
                    {
                        "$ref": "#/components/parameters/formatInPath"
                    },
                    {
                        "$ref": "#/components/parameters/fields"
                    },
                    {
                        "$ref": "#/components/parameters/from"
                    },
                    {
                        "$ref": "#/components/parameters/size"
                    },
                    {
                        "$ref": "#/components/parameters/sort"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        },
        "/records": {
            "get": {
                "description": "Liefert eine Liste von Datensätzen, auf die die gegebenen Suchkriterien zutreffen.",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/query"
                    },
                    {
                        "$ref": "#/components/parameters/formatInQuery"
                    },
                    {
                        "$ref": "#/components/parameters/fields"
                    },
                    {
                        "$ref": "#/components/parameters/from"
                    },
                    {
                        "$ref": "#/components/parameters/size"
                    },
                    {
                        "$ref": "#/components/parameters/sort"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/records/count": {
            "get": {
                "description": "Liefert die Anzahl von Datensätzen, auf die die gegebenen Suchkriterien zutreffen.",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        },
        "/record/{id}.{format}": {
            "get": {
                "description": "Liefert den Datensatz {id} im Format {format}.",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/id"
                    },
                    {
                        "$ref": "#/components/parameters/formatInPath"
                    },
                    {
                        "$ref": "#/components/parameters/fields"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "404": {
                        "description": "Not found"
                    }
                }
            }
        }
    },
